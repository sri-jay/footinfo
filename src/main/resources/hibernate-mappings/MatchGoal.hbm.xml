<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.abyeti.footinfo.db.ObjectMappings.MatchGoal" table="match_goal">
        <meta attribute="class-description">
            Class that holds goals made during a match.
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="goalType" column="goal_type" type="text"/>
        <property name="scoredBy" column="scored_by" type="text"/>
        <property name="goalTime" column="goal_time" type="text"/>
        <property name="matchId" column="match_id" type="text"/>
    </class>
</hibernate-mapping>