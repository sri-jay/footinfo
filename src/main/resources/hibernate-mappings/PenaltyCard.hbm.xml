<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.abyeti.footinfo.db.ObjectMappings.PenaltyCard" table="penalty_card">
        <meta attribute="class-description">
            Red/Yellow cards awarded during a match.
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="awardedTo" column="awarded_to" type="text"/>
        <property name="cardType" column="card_type" type="text"/>
        <property name="matchId" column="match_id" type="text"/>
    </class>
</hibernate-mapping>